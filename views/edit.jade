extends layout
link(href='/public/stylesheets/style.css',rel='stylesheet')
block content
    h2 Edit #{site.name}
    form(method='post',action='')
        div
            div(class='container')
                label(for='name', class='textWidth') Name:
                input(type='text',name='name',id='name', class='inputWidth', value=site.name)
            div(class='container')
                label(for='url', class='textWidth') Url:
                input(type='text',name='url',id='url', class='inputWidth', value=site.url)
            div(class='container')
                label(for='postData', class='textWidth') PostData:
                input(type='password',name='postData',id='postData', class='inputWidth', value=site.postData)
            input(type='hidden', name='original', value=site.name)
            input(type='submit',name='submit',value='Save')
            input(type='submit',name='submit',value='Cancel')
        br
        div Edit searches
            div(class='container')
                label(for='name', class='textWidth') Name:
                input(type='text',name='searchName',id='name', class='inputWidth')
                input(type='submit',name='submit',value='Add').submit-button
        br
        each val in searches
            div
                label(class='site') #{val.name}&nbsp
                a(href='/search?site=#{site.name}&name=#{val.name}') [Edit]
                label &nbsp
                a(href='/delete?site=#{val.name}',style={color: 'red'}) [Delete]
